include "buildmeshS.idp"
border bc(t=0,2*pi) {  x = 1+cos(t); z= 2+sin(t); y = 3+0.5*sin(5*t);label=1;}
border bci(t=0,2*pi) {  x = 1+0.5*cos(-t); z= 2+0.5*sin(-t); y = 3+0.1*cos(t);label=1;}
verbosity=2; 
meshL TL= buildmeshL(bc(100)+bci(50));
meshS Ts=buildmeshSminsurf(TL,1);
meshS Tsl=buildmeshSLap(TL,1);
plot(Ts,Tsl,TL,wait=1); 





