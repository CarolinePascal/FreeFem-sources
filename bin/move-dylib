#!/bin/bash 
set -e 
to=$1
shift
echo move to = $to
for ff in $@; do
file=`greadlink -f $ff`
echo move-dylib: change dylib in $file :: $ff
chmod a+w $file
install_name_tool -id $file $file
for dylib in `otool -L $file | awk '/compatibility/ {print $1}' `; do
  echo "# $dylib "
  dy=$(basename $dylib)
  ndy=`find $to -name $dy|head -1`
  if [ -f "$ndy" ] ; then 
  #echo "#$dy : $dylib ->  $ndy "
  install_name_tool -change $dylib $ndy $file
  fi
done
chmod a-w $file
xattr -c $file 
codesign  --remove-signature $file
codesign -s -  $file
done